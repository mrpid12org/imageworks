FROM nvidia/cuda:12.8.0-runtime-ubuntu22.04

ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app/src

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        python3-venv \
        python3-dev \
        build-essential \
        git \
        ninja-build \
        pkg-config \
        ca-certificates \
        curl \
    && python3 -m pip install --upgrade pip \
    && rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install --no-cache-dir \
        "fastapi" \
        "uvicorn[standard]" \
        "httpx" \
        "vllm[vision]==0.11.0" \
        "qwen-vl-utils" \
        "tomli" \
        "typer" \
        "uv"

COPY src /app/src
COPY configs /app/configs

EXPOSE 8600

CMD ["uvicorn", "imageworks.chat_proxy.vllm_admin_service:app", "--host", "0.0.0.0", "--port", "8600"]
